<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <!-- TextViews theme. -->

    <style name="TextViewTitles" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewPurple500" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <style name="TextViewExperiences" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textStyle">bold</item>

    </style>


    <!-- Button styles. -->

    <style name="ButtonBorderPurple500" parent="Widget.Material3.Button">
        <item name="strokeColor">@color/purple_500</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>